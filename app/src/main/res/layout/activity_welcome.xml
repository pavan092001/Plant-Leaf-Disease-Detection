<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:src="@drawable/main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the language"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="25dp"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:id="@+id/english"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="#792849"
                app:cardCornerRadius="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:layout_gravity="center"

                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/hindi"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="#109d58"
                app:cardCornerRadius="20dp"


                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="हिंदी"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"

                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/marathi"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="#d96122"
                app:cardCornerRadius="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="मराठी"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:layout_gravity="center"

                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/Bangla"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="#f6a724"
                app:cardCornerRadius="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="বাংলা"
                    android:textSize="35sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/telugu"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_margin="25dp"
                app:cardBackgroundColor="#6CC6C6"
                app:cardCornerRadius="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="తెలుగు"
                    android:textSize="35sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"

                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_margin="25dp"
                android:id="@+id/tamil"
                app:cardBackgroundColor="#6CC6C6"
                app:cardCornerRadius="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="தமிழ்"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:textStyle="bold|italic"
                    android:layout_gravity="center"

                    />

            </androidx.cardview.widget.CardView>



        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>